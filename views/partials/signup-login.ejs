<section id="sign-up" >
    <div class="container my-5" data-aos="fade-down">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 1rem;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                        
                        <!-------------------Sign up --------------------------------->
                        <div class="front">
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                        
                            <% if(typeof signErr !='undefined' ){ %>
                                <div class="alert <%= color %> alert-dismissible fade show text-center" role="alert">
                                    <%= signErr %>
                                </div>
                            <% } %>


                            <form class="mx-1 mx-md-4" method="post" action="/signup">
                    
                                
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-floating  flex-fill p-0">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="john doe" required name="name" value="<%= typeof name !='undefined' ? name : '' %>">
                                    <label for="floatingInput">Name</label>
                                    </div>
                                </div>
            
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-floating flex-fill p-0">
                                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required name="email" value="<%= typeof email !='undefined' ? email : '' %>">
                                    <label for="floatingInput">Email</label>
                                    </div>
                                </div>
                
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-floating flex-fill p-0">
                                    <input type="password" class="form-control" id="floatingInput" placeholder="name@example.com" required name="password">
                                    <label for="floatingInput">Password</label>
                                    </div>
                                </div>
                
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                    <div class="form-floating flex-fill p-0">
                                    <input type="password" class="form-control" id="floatingInput" placeholder="name@example.com" required name="confirmPassword">
                                    <label for="floatingInput">Confirm Password</label>
                                    </div>
                                </div>
            
                
                                <div class="d-flex justify-content-center mx-auto mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg sign-up-btn"  style="margin: 0; width: 100%;">Sign Up</button>
                                </div>
                                <a id="go-to-login" href="#">Login to my account →</a>
                            </form>
                        </div>
        
                        <!-----------------------------Login----------------------------------->

                        <div class="back">
                            
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
        
                            <form class="mx-1 mx-md-4" method="post" action="/login">
                    
                                <% if(typeof signErr !='undefined' ){ %>
                                    <div class="alert alert-danger alert-dismissible fade show text text-center" role="alert">
                                        <%= signErr %>
                                    </div>
                                <% } %>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-floating flex-fill p-0">
                                    <input type="email" class="form-control" id="floatingInput" placeholder="email" required name="email" value="<%= typeof email !='undefined' ? email : '' %>">
                                    <label for="floatingInput">Email</label>
                                    </div>
                                </div>
            
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-floating flex-fill p-0">
                                    <input type="password" class="form-control" id="floatingInput" placeholder="name@example.com" required name="password">
                                    <label for="floatingInput">Password</label>
                                    </div>
                                </div>
        
                                <p>Forgot Password?</p>
            
                                <div class="d-flex justify-content-center mx-auto mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg sign-up-btn"  style="margin: 0; width: 100%;">Login</button>
                                </div>
                                <a  id="go-to-signup" href="#">Create new account →</a>
                        </form>
                        </div>
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
        
                        <img src="/img/undraw_secure_login_pdn4 (1).svg" class="img-fluid px-5" alt="Sample image">
        
                    </div>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
</section>