<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header.ejs') %>

</head>
<body>
    
  <%- include('./partials/gotop.ejs') %>

  <!----------------------------navbar------------------------------->
  <%- include('./partials/navbar2.ejs') %>

  
  <% if(typeof data !='undefined' ){ %>
    <div class="container my-5 px-md-5 py-5 text-center" style="min-height: 80vh;">
      <h3>History</h3>
      <hr>
      <br>
      <table class="table bg-white">
        <thead class="table-dark">
          <tr>
            <th scope="col">History</th>
            <th scope="col">Time</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i< data.length; i++){ %>
            <tr>
              <td class="text-start ps-3"> <strong><%= data[i].history %></strong> </td>
              <td class="text-start ps-2">
                <strong>Date:</strong> <%= data[i].time.getDate() %>/<%= data[i].time.getMonth()+1 %>/<%= data[i].time.getFullYear() %> 
                <br>
                <strong>Time:</strong> <%= data[i].time.getHours() %>:<%= data[i].time.getMinutes()+1 %>:<%= data[i].time.getSeconds() %>
                <% if(data[i].time.getHours() >=12){ %>
                  PM
                <% }else{ %>
                  AM
                <% }%>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  <% } %>

  <!----------------------------footer------------------------------->
  <%-include('./partials/footer.ejs') %>

</body>
</html>